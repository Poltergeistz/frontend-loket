{{title "Subsidies"}}
<div class="u-border--light--bottom loket-onderdeel__header">
  <div class="u-padding--round--small">
  	<h1 class="h4 u-spacer--tiny">Lopende aanvragen voor subsidiemaatregelen</h1>
    <div class="grid">
      <div class="col--6-12 col--1-1--s">
        <div class="input-field-icon-container--right">
          {{input
              type="text"
              placeholder="Zoek subsidiemaatregel"
              key-up=(perform search)
              value=searchData
              class="input-field input-field--block"
          }}
          <i class="input-field__icon vi vi-magnifier" aria-hidden="true"></i>
        </div>
      </div>
      <div class="col--6-12 col--1-1--s u-align-right--tablet-portrait-up">
      	<div class="button-group">
      		{{#link-to "subsidiebeheer.subsidies-archief" class="button button--narrow button--alt u-spacer--none"}}Archief{{/link-to}}
      		{{#link-to "subsidiebeheer.subsidies-beschikbaar" class="button button--narrow u-spacer--none"}}Nieuwe aanvraag{{/link-to}}
        </div>
      </div>
    </div>
  </div>
</div>
<div class="container-flex--scroll">
  <table class="data-table data-table--nowrap">
    <thead>
      <tr class="data-table__header">
        <th><a class="data-table__header-title--sortable">Subsidiemaatregel</a> <i class="data-table__header-title__sort-icon vi-u-link-after vi-long-arrow vi"></i></th>
        <th><a class="data-table__header-title--sortable">Reeks</a></th>
        <th><a class="data-table__header-title--sortable">Einde termijn</a></th>
        <th><a class="data-table__header-title--sortable">Status</a></th>
        {{!-- <th><a class="data-table__header-title--sortable">Beslissing</a></th> --}}
        <th><a class="data-table__header-title--sortable">Gewijzigd door</a></th>
        <th><a class="data-table__header-title--sortable">Laatst bewerkt</a></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
    	<tr>
    		<td class="u-align-center u-padding--round--small" colspan="7">
    			<p class="text-fade u-spacer--tinier">U heeft nog geen subsidiemaatregel aangevraagd.</p>
      		{{#link-to "subsidiebeheer.subsidies-beschikbaar" class="button button--link"}}Nieuwe aanvraag{{/link-to}}
				</td>
    	</tr>
    </tbody>
  </table>
</div>
<div class="data-table__actions data-table__actions--bottom">
	<div class="data-table-pagination">
		<div class="pager">
			<ul class="pager__list">
				<li class="pager__element u-hidden-mobile">
					<span class="u-visually-hidden">Rij </span><strong>1 - 4</strong> van 4
				</li>
			</ul>
		</div>
	</div>
</div>

{{outlet}}
